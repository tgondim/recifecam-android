<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="thgg.android.recifeCam"
	android:id="@+id/llExibirCameraActivity1" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<TextView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/txtTitulo"
		android:layout_weight="16" />
		
	<LinearLayout android:id="@+id/llExibirCameraActivity2"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1" android:orientation="vertical" >
		
		<ProgressBar android:id="@+id/pbCamera"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:layout_gravity="center"/>
	
		<ImageView android:id="@+id/ivCamera" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:clickable="true" android:layout_weight="1"/>
		
		<com.admob.android.ads.AdView 
			android:id="@+id/adMob2" 
			android:layout_height="fill_parent" 
			android:layout_width="fill_parent" 
			android:layout_weight="6"
			app:backgroundColor="#000000"
          	app:primaryTextColor="#FFFFFF"
          	app:secondaryTextColor="#CCCCCC"
         	app:keywords="Android game" />
	
</LinearLayout>

</LinearLayout>
